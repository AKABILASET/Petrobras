    weight: 'Engenharia Geral (Parte 2)',
    topics: [
      { id: 'b2-1', name: 'Cálculo vetorial e matricial' },
      { id: 'b2-2', name: 'Análise combinatória e Progressões' },
      { id: 'b2-3', name: 'Geometria: Plana, Espacial e Analítica' },
      { id: 'b2-4', name: 'Estática dos corpos rígidos e Momento de inércia' },
      { id: 'b2-5', name: 'Física: Acústica e Ótica' },
      { id: 'b2-6', name: 'Eletricidade e Eletromagnetismo' },
      { id: 'b2-7', name: 'Teoria da elasticidade' },
      { id: 'b2-8', name: 'Termodinâmica: 1ª e 2ª Leis, substâncias puras' },
      { id: 'b2-9', name: 'Gases, misturas e soluções ideais' },
      { id: 'b2-10', name: 'Transferência de calor: Condução, convecção e radiação' },
      { id: 'b2-11', name: 'Transferência de massa' },
    ]
  },
  {
    id: 'bloco3',
    title: 'Conhecimentos Específicos - Bloco III',
    weight: 'Específica de Petróleo e Ferramentas',
    topics: [
      { id: 'b3-1', name: 'Lógica, Conjuntos e Funções' },
      { id: 'b3-2', name: 'Probabilidade e Estatística descritiva' },
      { id: 'b3-3', name: 'Matemática financeira' },
      { id: 'b3-4', name: 'Geologia do Petróleo' },
      { id: 'b3-5', name: 'Geofísica de Petróleo' },
      { id: 'b3-6', name: 'Perfuração de Poços' },
      { id: 'b3-7', name: 'Avaliação das Formações' },
      { id: 'b3-8', name: 'Completação de Poços' },
      { id: 'b3-9', name: 'Engenharia de Reservatórios' },
      { id: 'b3-10', name: 'Elevação e Escoamento' },
      { id: 'b3-11', name: 'Sistemas Submarinos de Produção' },
      { id: 'b3-12', name: 'Processamento Primário de Petróleo' },
